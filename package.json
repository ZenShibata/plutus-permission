{
  "name": "@zenshibata/plutus-permission",
  "version": "1.0.0",
  "description": "A module for resolving Plutus' users permissions",
  "keywords": [
    "bitfield",
    "typescript"
  ],
  "homepage": "https://frutbits.org/",
  "bugs": {
    "url": "https://github.com/ZenShibata/plutus-permission/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZenShibata/plutus-permission.git"
  },
  "license": "AGPL-3.0",
  "author": "Zen Shibata <zen@frutbits.org>",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "dist/**/*.js*",
    "dist/**/*.mjs*",
    "dist/**/*.d*"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -b src && rollup -c rollup.bundle.ts && npm run esm:default && rimraf ./dist/lib/BitField.d.ts && copyfiles -V -f ./src/lib/BitField.d.ts ./dist/lib/BitField.d.ts",
    "compile": "tsc --build tsconfig.json",
    "esm:default": "gen-esm-wrapper dist/index.js dist/index.mjs",
    "lint": "eslint . --ignore-path .gitignore --ext .ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "eslintConfig": {
    "extends": "@hazmi35/eslint-config/typescript",
    "ignorePatterns": [
      "dist/*",
      "rollup.bundle.ts",
      "src/**/*.js"
    ]
  },
  "devDependencies": {
    "@hazmi35/eslint-config": "^8.4.2",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.18.0",
    "gen-esm-wrapper": "^1.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.7",
    "rollup-plugin-version-injector": "^1.3.3",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  }
}
